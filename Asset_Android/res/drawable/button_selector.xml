<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_focused="true"
        android:state_pressed="false"
        android:drawable="@drawable/btn_selector_focused_blue"
        />

    <item
        android:state_focused="false"
        android:state_pressed="true"
        android:drawable="@drawable/btn_selector_pressed_pink"
        />

    <item
        android:state_focused="true"
        android:state_pressed="true"
        android:drawable="@drawable/btn_selector_focus_pressed_lightblue"
        />

    <item
        android:state_hovered="true"
        android:drawable="@drawable/btn_selector_hovered_green"
        />

    <item
        android:state_enabled="false"
        android:drawable="@drawable/btn_selector_disabled_gray"
        />

    <item
        android:drawable="@drawable/btn_selector_normal_white"
        />
</selector>